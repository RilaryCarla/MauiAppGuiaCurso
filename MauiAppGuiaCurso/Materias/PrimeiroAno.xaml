<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppGuiaCurso.Materias.PrimeiroAno"
             Title="PrimeiroAno">

    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
                  ColumnDefinitions="*, *"
                  Padding="5">
                <Button Grid.Column="0" Grid.Row="0" x:Name="btnAlgoritmo"  Clicked="btnAlgoritmo_Clicked" />
                <Button Grid.Column="1" Grid.Row="0" x:Name="btnAnalise" Clicked="btnAnalise_Clicked" />
                <Button Grid.Column="0" Grid.Row="1" x:Name="btnBancoI" Clicked="btnBancoI_Clicked" />
                <Button Grid.Column="1" Grid.Row="1" x:Name="btnDesign" Clicked="btnDesign_Clicked" />
                <Button Grid.Column="0" Grid.Row="2" x:Name="btnFundamentos" Clicked="btnFundamentos_Clicked" />
                <Button Grid.Column="1" Grid.Row="2" x:Name="btnWebI" Clicked="btnWebI_Clicked" />

            </Grid>
        </ScrollView>
    </VerticalStackLayout>

</ContentPage>